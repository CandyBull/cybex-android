<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
       <shape android:shape="rectangle">
           <gradient
               android:angle="360"
               android:startColor="@color/btn_orange_start"
               android:endColor="@color/btn_orange_end"
               android:type="linear"/>
           <stroke
               android:width="1dp"
               android:color="@android:color/transparent"/>
           <corners android:radius="@dimen/corner_radius_4" />
       </shape>
    </item>

    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="rectangle" >

            <solid android:color="@color/colorPrimary" />
            <corners android:radius="@dimen/corner_radius_4" />
        </shape>
    </item>

</layer-list>