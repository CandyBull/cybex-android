<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cybexmobile">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:name=".MainApplication"
        android:allowBackup="false"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.SplashActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.BottomNavigationActivity"
            android:label="@string/title_activity_nav_button"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.MarketsActivity"
            android:label="@string/title_activity_markets"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.ChooseLanguageActivity"
            android:label="@string/title_activity_choose_language"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.ChooseThemeActivity"
            android:label="@string/title_activity_choose_theme"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.LoginActivity"
            android:theme="@style/AppTheme" />
        <activity android:name=".activity.RegisterActivity" />
        <activity
            android:name=".activity.SettingActivity"
            android:label="@string/title_setting_activity"
            android:theme="@style/AppTheme" />
        <activity android:name=".activity.WalletIntroductionActivity" />
        <activity android:name=".activity.OpenOrdersActivity" />
        <activity android:name=".activity.PortfolioActivity"></activity>

        <activity
            android:name=".activity.LockAssetsActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_choose_theme"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>