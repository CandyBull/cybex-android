<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Dark theme base colours -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:windowAnimationStyle">@style/Animation.Activity</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- coin pair style -->
    <style name="font_grey_large">
        <item name="android:fontFamily">Rubik</item>
        <item name="android:textColor">#78819A</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="font_grey_medium">
        <item name="android:fontFamily">Rubik</item>
        <item name="android:textColor">#78819A</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- font orange -->
    <style name="font_orange_bold_large" parent="font_orange_large">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="font_orange_large">
        <item name="android:fontFamily">Rubik</item>
        <item name="android:textColor">@color/primary_orange</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="font_orange_bold_medium" parent="font_orange_medium">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="font_orange_medium">
        <item name="android:fontFamily">Rubik</item>
        <item name="android:textColor">@color/primary_orange</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="font_orange_bold_small" parent="font_orange_small">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="font_orange_small">
        <item name="android:fontFamily">Rubik</item>
        <item name="android:textColor">@color/primary_orange</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- font white dark -->
    <style name="font_white_dark_bold_large" parent="font_white_dark_large">
        <item name="android:textStyle">bold</item>
    </style>


    <style name="font_white_dark_large">
        <item name="android:fontFamily">Roboto Condensed</item>
        <item name="android:textColor">@color/primary_color_white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="font_white_dark_medium">
        <item name="android:fontFamily">Roboto Condensed</item>
        <item name="android:textColor">@color/primary_color_white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="font_white_dark_small">
        <item name="android:fontFamily">Roboto Condensed</item>
        <item name="android:textColor">@color/primary_color_white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- font gray -->
    <style name="font_gray_bold_small" parent="font_gray_small">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="font_gray_small">
        <item name="android:fontFamily">Roboto Condensed</item>
        <item name="android:textColor">#78819A</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- font green -->
    <style name="font_green_bold_small" parent="font_green_small">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="font_green_small">
        <item name="android:fontFamily">Roboto Condensed</item>
        <item name="android:textColor">#6DBB49</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- font white -->
    <style name="font_white_bold_medium" parent="font_white_medium">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="font_white_medium">
        <item name="android:fontFamily">Roboto Condensed</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="font_white_bold_large" parent="font_white_large">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="font_white_large" parent="font_white_medium">
        <item name="android:textSize">16sp</item>s
    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyCustomTextAppearance</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

    <!-- Activity Open Or Close Animation -->
    <style name="Animation.Activity" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/in_from_right</item>
        <item name="android:activityOpenExitAnimation">@anim/out_to_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/in_from_left</item>
        <item name="android:activityCloseExitAnimation">@anim/out_to_right</item>
    </style>

    <!-- Load Dialog Style -->
    <style name="LoadDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:background">@drawable/bg_load_dialog</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:textColor">@color/dialog_font_color</item>
        <item name="android:textColorPrimary">@color/dialog_font_color</item>
        <item name="android:buttonStyle">@style/DialogButton</item>

    </style>

    <style name="DialogButton">
        <item name="android:textColor">@color/dialog_font_color</item>
    </style>

</resources>
