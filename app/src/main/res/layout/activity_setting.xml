<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:subtitleTextColor="@color/grey_unselected_font_color"
        app:titleTextColor="@color/grey_unselected_font_color"
        app:navigationIcon="@drawable/ic_arrow_forward_16px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_setting"
            android:layout_gravity="center"
            style="@style/font_white_dark_bold_large" />

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/activity_padding"
        android:paddingEnd="@dimen/activity_padding"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/setting_language"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/itemBackground"
            app:cardCornerRadius="4dp"
            android:elevation="2dp"
            app:cardUseCompatPadding="true"
            android:layout_marginTop="@dimen/activity_margin">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/activity_padding">
                <TextView
                    android:id="@+id/setting_language_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/font_white_dark_bold_large"
                    android:text="@string/setting_language"
                    android:layout_centerVertical="true" />
                <TextView
                    android:id="@+id/setting_language_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/setting_language_title"
                    android:layout_alignParentRight="true"
                    android:layout_centerHorizontal="true"
                    style="@style/font_grey_large"
                    android:drawableEnd="@drawable/ic_arrow_forward_right_16_px"
                    android:text="English"/>
            </RelativeLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/setting_theme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/itemBackground"
            app:cardCornerRadius="4dp"
            app:cardUseCompatPadding="true"
            android:layout_marginTop="@dimen/activity_margin">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/activity_padding">
                <TextView
                    android:id="@+id/setting_theme_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/font_white_dark_bold_large"
                    android:text="@string/setting_theme"
                    android:layout_centerVertical="true" />
                <TextView
                    android:id="@+id/setting_theme_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/setting_theme_title"
                    android:layout_alignParentRight="true"
                    android:layout_centerHorizontal="true"
                    style="@style/font_grey_large"
                    android:drawableEnd="@drawable/ic_arrow_forward_right_16_px"
                    android:text="@string/setting_theme_dark"/>
            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/setting_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/itemBackground"
            app:cardCornerRadius="4dp"
            app:cardUseCompatPadding="true"
            android:layout_marginTop="@dimen/activity_margin">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/activity_padding">
                <TextView
                    android:id="@+id/setting_version_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/font_white_dark_bold_large"
                    android:text="@string/setting_version"
                    android:layout_centerVertical="true" />
                <TextView
                    android:id="@+id/setting_version_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/setting_version_title"
                    android:layout_alignParentRight="true"
                    android:layout_centerHorizontal="true"
                    android:drawableEnd="@drawable/ic_arrow_forward_right_16_px"
                    style="@style/font_grey_large" />
            </RelativeLayout>


        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/log_out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_margin"
            android:background="@drawable/bg_btn_orange_gradient_enabled"
            android:clickable="false"
            android:text="@string/action_log_out"
            android:textColor="@color/login_text_color"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>

