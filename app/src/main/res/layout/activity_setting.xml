<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        app:subtitleTextColor="@color/primary_color_grey"
        app:titleTextColor="@color/primary_color_grey"
        app:navigationIcon="@drawable/ic_arrow_forward_16px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_setting"
            android:layout_gravity="center"
            style="@style/font_white_dark_bold_large" />

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/activity_padding"
        android:paddingEnd="@dimen/activity_padding"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/itemBackground"
            app:cardCornerRadius="4dp"
            app:cardUseCompatPadding="true"
            android:layout_marginTop="@dimen/activity_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/setting_layout_language"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/activity_padding">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/font_white_dark_large"
                        android:text="@string/setting_language"
                        android:layout_centerVertical="true" />

                    <TextView
                        android:id="@+id/setting_tv_language"
                        style="@style/font_grey_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerHorizontal="true"
                        android:drawablePadding="@dimen/text_drawable_padding"
                        android:drawableEnd="@drawable/ic_arrow_forward_right_16_px" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimary"/>

                <RelativeLayout
                    android:id="@+id/setting_layout_frequency"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/activity_padding">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/font_white_dark_large"
                        android:text="@string/setting_frequency"
                        android:layout_centerVertical="true" />

                    <TextView
                        android:id="@+id/setting_tv_frequency"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerHorizontal="true"
                        android:drawableEnd="@drawable/ic_arrow_forward_right_16_px"
                        android:drawablePadding="@dimen/text_drawable_padding"
                        style="@style/font_grey_medium" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimary"/>

                <RelativeLayout
                    android:id="@+id/setting_layout_version"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/activity_padding">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/font_white_dark_large"
                        android:text="@string/setting_version"
                        android:layout_centerVertical="true" />

                    <TextView
                        android:id="@+id/setting_tv_version"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerHorizontal="true"
                        android:drawableEnd="@drawable/ic_arrow_forward_right_16_px"
                        android:drawablePadding="@dimen/text_drawable_padding"
                        style="@style/font_grey_medium" />

                </RelativeLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/itemBackground"
            app:cardCornerRadius="4dp"
            app:cardUseCompatPadding="true"
            android:layout_marginTop="@dimen/activity_margin">

            <RelativeLayout
                android:id="@+id/setting_layout_theme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/activity_padding">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/font_white_dark_large"
                    android:text="@string/setting_theme"
                    android:layout_centerVertical="true" />

                <TextView
                    android:id="@+id/setting_tv_theme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerHorizontal="true"
                    android:drawablePadding="@dimen/text_drawable_padding"
                    style="@style/font_grey_medium"
                    android:drawableEnd="@drawable/ic_arrow_forward_right_16_px" />
            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/log_out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_margin"
            android:background="@drawable/bg_btn_orange_gradient_enabled"
            android:clickable="false"
            android:text="@string/action_log_out"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>

