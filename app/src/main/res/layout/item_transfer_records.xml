<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:autofit="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/itemBackground"
    android:orientation="horizontal"
    android:padding="@dimen/activity_padding">

    <ImageView
        android:id="@+id/item_transfer_records_iv_transfer_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingTop="@dimen/activity_padding"
        android:paddingBottom="@dimen/activity_padding" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/activity_margin"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/item_transfer_records_tv_account_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/font_white_dark_bold_large"
                android:text="@string/text_empty"/>

            <TextView
                android:id="@+id/item_transfer_records_tv_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                style="@style/font_white_dark_bold_medium"
                android:text="@string/text_empty"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/item_transfer_records_tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/font_gray_small"
                android:text="@string/text_empty"/>

            <TextView
                android:id="@+id/item_transfer_records_tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                style="@style/font_gray_small"
                android:text="@string/text_empty"/>

        </FrameLayout>

    </LinearLayout>

</LinearLayout>