<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:autofit="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/itemBackground"
    android:orientation="vertical"
    android:padding="@dimen/activity_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_own_order_history_tv_buy_sell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/text_sell_or_buy_padding"
            android:paddingEnd="@dimen/text_sell_or_buy_padding"
            android:text="@string/text_empty"
            android:textSize="@dimen/font_xxsmall"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_btn_buy"/>

        <TextView
            android:id="@+id/item_own_order_history_tv_quote_symbol"
            style="@style/font_white_dark_bold_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/text_quote_margin_start"
            android:text="@string/text_empty" />

        <TextView
            style="@style/font_gray_bold_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/" />

        <TextView
            android:id="@+id/item_own_order_history_tv_base_symbol"
            style="@style/font_gray_bold_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_empty" />

        <TextView
            android:id="@+id/item_own_order_history_tv_base_amount"
            style="@style/font_white_dark_bold_large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:maxLines="1"
            android:text="@string/text_empty" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/text_volume_margin_top">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/font_gray_bold_small"
                    android:text="@string/item_text_open_order_amount"/>

                <TextView
                    android:id="@+id/item_own_order_history_tv_quote_amount"
                    style="@style/font_gray_bold_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/text_quote_margin_start"
                    android:text="@string/text_empty" />

            </LinearLayout>

            <TextView
                android:id="@+id/item_own_order_history_tv_base_price"
                style="@style/font_gray_bold_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="@string/text_empty" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_volume_margin_top">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/font_gray_bold_small"
                    android:text="@string/item_own_order_history_time"/>

                <TextView
                    android:id="@+id/item_own_order_history_tv_time"
                    style="@style/font_gray_bold_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/text_quote_margin_start"
                    android:text="@string/text_empty" />

            </LinearLayout>

            <TextView
                style="@style/font_gray_bold_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="@string/item_own_order_history_done" />

        </RelativeLayout>



    </LinearLayout>

</LinearLayout>