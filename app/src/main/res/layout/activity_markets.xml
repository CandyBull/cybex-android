<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cybexmobile.activity.MarketsActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        app:subtitleTextColor="@color/primary_color_grey"
        app:titleTextColor="@color/primary_color_grey"
        app:navigationIcon="@drawable/ic_arrow_forward_16px">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            style="@style/font_white_dark_bold_large" />

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/market_page_layout_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:padding="@dimen/activity_padding">

        <TextView
            android:id="@+id/market_page_current_money"
            style="@style/font_white_dark_bold_xxlarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$11,309.109" />
        <LinearLayout
            android:id="@+id/market_page_change_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@id/market_page_current_money"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/market_page_change_symbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/market_page_exchange_variation"
                style="@style/font_green_bold_xxlarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25.25%" />
        </LinearLayout>

        <TextView
            android:id="@+id/market_page_high_price"
            style="@style/font_gray_bold_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/market_page_current_money"
            android:layout_below="@id/market_page_current_money"
            android:layout_marginTop="@dimen/text_kline_header_price_margin_top"
            android:text="High:$11,984.124" />

        <TextView
            android:id="@+id/market_page_volume_quote"
            style="@style/font_gray_bold_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/market_page_high_price"
            android:layout_alignRight="@id/market_page_change_layout"
            android:text="Vol: 125,980.213 BTC" />

        <TextView
            android:id="@+id/market_page_low_price"
            style="@style/font_gray_bold_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/market_page_high_price"
            android:layout_below="@id/market_page_high_price"
            android:text="Low: $10671.400" />

        <TextView
            android:id="@+id/market_page_volume_base"
            style="@style/font_gray_bold_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/market_page_low_price"
            android:layout_alignEnd="@id/market_page_volume_quote"
            android:text="$1,005,620,329.539" />
    </RelativeLayout>


    <com.cybexmobile.widget.OverScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/market_page_layout_header"
        android:layout_above="@+id/market_page_layout_footer"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/kline_header_color"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <include layout="@layout/header_kline_type" />
            <include layout="@layout/header_kline_value" />
            <include layout="@layout/header_kline_chart_ma" />

            <ProgressBar
                android:id="@+id/market_page_progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone" />

            <com.cybexmobile.mychart.MyCombinedChart
                android:id="@+id/kline_chart_k"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_kline_height"
                android:visibility="invisible" />

            <com.cybexmobile.mychart.MyCombinedChart
                android:id="@+id/kline_chart_volume"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_volume_height"
                android:visibility="invisible" />

            <com.cybexmobile.mychart.MyCombinedChart
                android:id="@+id/kline_chart_chart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/market_page_5_min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="5m"
                    android:gravity="center"
                    style="@style/font_gray_medium"
                    android:textColor="@color/kline_header_selector" />

                <TextView
                    android:id="@+id/market_page_1_hour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="1h"
                    style="@style/font_gray_medium"
                    android:textColor="@color/kline_header_selector" />

                <TextView
                    android:id="@+id/market_page_1_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="1d"
                    style="@style/font_gray_medium"
                    android:textColor="@color/kline_header_selector" />
            </LinearLayout>

            <android.support.design.widget.TabLayout
                android:id="@+id/market_page_tab_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/tab_order_margin_top"
                android:background="@android:color/transparent"
                app:tabBackground="@android:color/transparent"
                app:tabIndicatorColor="@color/primary_color_orange"
                app:tabMode="fixed"
                app:tabSelectedTextColor="@color/font_color_white_dark"
                app:tabTextColor="@color/primary_color_grey"
                app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget">
                <android.support.design.widget.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/market_page_order_book" />

                <android.support.design.widget.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/market_page_trade_history" />
            </android.support.design.widget.TabLayout>

            <com.cybexmobile.widget.ViewPagerForScrollView
                android:id="@+id/market_page_view_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent" />

        </LinearLayout>
    </com.cybexmobile.widget.OverScrollView>

    <LinearLayout
        android:id="@+id/market_page_layout_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/layout_footer_padding"
        android:layout_alignParentBottom="true"
        android:background="@android:color/transparent"
        android:orientation="horizontal">
        <Button
            android:id="@+id/market_page_btn_buy"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_input_height"
            android:layout_marginStart="@dimen/btn_buy_sell_margin"
            android:layout_marginEnd="@dimen/btn_buy_sell_margin"
            android:layout_weight="1"
            style="@style/font_white_large"
            android:text="@string/text_buy"
            android:layout_gravity="bottom"
            android:background="@drawable/bg_btn_green_gradient_enabled"/>

        <Button
            android:id="@+id/market_page_btn_sell"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_input_height"
            android:layout_marginStart="@dimen/btn_buy_sell_margin"
            android:layout_marginEnd="@dimen/btn_buy_sell_margin"
            android:layout_weight="1"
            style="@style/font_white_large"
            android:text="@string/text_sell"
            android:layout_gravity="bottom"
            android:background="@drawable/bg_btn_red_gradient_enabled"/>
    </LinearLayout>
</RelativeLayout>
