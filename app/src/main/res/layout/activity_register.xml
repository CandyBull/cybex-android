<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".activity.LoginActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:subtitleTextColor="@color/grey_unselected_font_color"
        app:titleTextColor="@color/grey_unselected_font_color"
        app:navigationIcon="@drawable/ic_close_24_px"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/image_logo_margin_top_bottom"
            android:layout_marginBottom="@dimen/image_logo_margin_top_bottom"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_logo"
            android:layout_marginTop="@dimen/layout_register_margin_top"
            android:padding="@dimen/layout_login_padding_margin"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/register_cloud_wallet_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/register_cloud_wallet_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:letterSpacing="0.04"
                    android:text="@string/register_create_cloud_wallet"
                    android:textColor="@color/grey_unselected_font_color"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/register_cloud_wallet_question_marker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/cloud_wallet" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/layout_login_padding_margin"
                android:paddingStart="@dimen/layout_login_padding_margin"
                android:paddingEnd="@dimen/layout_login_padding_margin"
                android:background="@drawable/market_coin_pair_unselected">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/market_coin_pair_unselected">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/register_account_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_avatar_24_px"
                            android:alpha="0.5"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/register_et_account_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@android:color/transparent"
                                android:hint="@string/prompt_user_name"
                                android:maxLines="1"
                                android:maxLength="63"
                                android:digits="@string/edittext_user_name_digits"
                                android:singleLine="true"
                                android:textColor="@color/primary_color_white"
                                android:textColorHint="@color/text_hint_color"
                                android:textCursorDrawable="@null" />

                            <ImageView
                                android:id="@+id/user_name_check"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="@dimen/image_success_margin_end"
                                android:src="@drawable/register_check"
                                android:visibility="gone" />
                        </RelativeLayout>
                    </LinearLayout>

                </android.support.design.widget.TextInputLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimary"/>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/market_coin_pair_unselected">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/register_password_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_lock_outline_24_px"
                            android:alpha="0.5"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/register_et_password"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@android:color/transparent"
                                android:hint="@string/prompt_password"
                                android:imeActionId="6"
                                android:imeActionLabel="@string/action_sign_in_short"
                                android:imeOptions="actionUnspecified"
                                android:inputType="textPassword"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:textColor="@color/primary_color_white"
                                android:textColorHint="@color/text_hint_color"
                                android:textCursorDrawable="@null" />

                            <ImageView
                                android:id="@+id/password_check"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="@dimen/image_success_margin_end"
                                android:src="@drawable/register_check"
                                android:visibility="gone" />

                        </RelativeLayout>
                    </LinearLayout>

                </android.support.design.widget.TextInputLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimary"/>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/register_password_confirmation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/market_coin_pair_unselected">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/register_password_confirmation_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_lock_outline_24_px"
                            android:alpha="0.5"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/register_et_password_confirmation"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@android:color/transparent"
                                android:hint="@string/prompt_confirm_password"
                                android:imeActionId="6"
                                android:imeActionLabel="@string/action_sign_in_short"
                                android:imeOptions="actionUnspecified"
                                android:inputType="textPassword"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:textColor="@color/primary_color_white"
                                android:textColorHint="@color/text_hint_color"
                                android:textCursorDrawable="@null" />

                            <ImageView
                                android:id="@+id/password_confirm_check"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="@dimen/image_success_margin_end"
                                android:src="@drawable/register_check"
                                android:visibility="gone" />
                        </RelativeLayout>
                    </LinearLayout>

                </android.support.design.widget.TextInputLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimary"/>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/register_confirmation_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/market_coin_pair_unselected">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/register_pin_code_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_pincode_24_px"
                            android:alpha="0.5"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/register_et_pin_code"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@android:color/transparent"
                                android:hint="@string/prompt_pin_code"
                                android:imeActionId="6"
                                android:imeActionLabel="@string/action_sign_in_short"
                                android:imeOptions="actionUnspecified"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:textColor="@color/primary_color_white"
                                android:textColorHint="@color/text_hint_color"
                                android:textCursorDrawable="@null" />

                            <ImageView
                                android:id="@+id/register_pin_code_image"
                                android:layout_width="@dimen/image_pin_code_width"
                                android:layout_height="@dimen/image_pin_code_height"
                                android:layout_centerVertical="true"
                                android:layout_alignParentEnd="true"
                                android:background="@drawable/btn_orange_gradient_enabled" />
                        </RelativeLayout>
                    </LinearLayout>

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_error_hint_height"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/layout_error_hint_margin_top">

                <ImageView
                    android:id="@+id/register_error_sign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/complete"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/register_error_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary_color_white"
                    android:textSize="12sp" />
            </LinearLayout>

            <Button
                android:id="@+id/email_sign_in_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/btn_register_margin_top"
                android:background="@drawable/btn_orange_gradient_enabled"
                android:enabled="false"
                android:text="@string/create_account_register"
                android:textColor="@color/login_text_color"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/text_register_margin_bottom">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/font_white_dark_medium"
                android:text="@string/have_account_login"/>
            <TextView
                android:id="@+id/tv_login_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/action_sign_in"
                android:textColor="@color/primary_orange"/>

        </LinearLayout>



    </RelativeLayout>


</LinearLayout>