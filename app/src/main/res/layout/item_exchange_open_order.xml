<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:autofit="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/itemBackground"
    android:orientation="vertical"
    android:padding="@dimen/activity_padding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/item_exchange_open_order_tv_buy_sell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/padding_6"
                android:paddingEnd="@dimen/padding_6"
                android:text="@string/text_empty"
                style="@style/font_white_xxsmall"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bg_btn_buy"/>

            <TextView
                android:id="@+id/item_exchange_open_order_tv_quote_symbol"
                style="@style/font_white_dark_bold_large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_8"
                android:text="@string/text_empty" />

            <TextView
                style="@style/font_gray_bold_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/" />

            <TextView
                android:id="@+id/item_exchange_open_order_tv_base_symbol"
                style="@style/font_gray_bold_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_empty" />

            <TextView
                android:id="@+id/item_exchange_open_order_tv_filled"
                style="@style/font_white_dark_bold_large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:maxLines="1"
                android:text="@string/text_empty" />

        </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_6">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/font_gray_bold_small"
                    android:text="@string/item_text_open_order_price"/>

                <TextView
                    android:id="@+id/item_exchange_open_order_tv_asset_price"
                    style="@style/font_gray_bold_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_8"
                    android:text="@string/text_empty" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_3"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/font_gray_bold_small"
                    android:text="@string/item_text_open_order_amount"/>

                <TextView
                    android:id="@+id/item_exchange_open_order_tv_asset_amount"
                    style="@style/font_gray_bold_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_8"
                    android:text="@string/text_empty" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/item_exchange_open_order_btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textAllCaps="false"
            style="@style/font_gray_large"
            android:text="@string/item_text_open_order_cancel"
            android:drawableLeft="@drawable/ic_star_border_24_px"/>

    </RelativeLayout>

</LinearLayout>