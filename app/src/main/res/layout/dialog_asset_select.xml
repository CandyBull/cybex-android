<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/dialog_asset_select_background_color"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_asset_select_tv_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/activity_padding"
        android:paddingBottom="@dimen/activity_padding"
        style="@style/font_gray_large"
        android:textColor="@color/text_frequency_mode_selector"
        android:gravity="end"
        android:paddingEnd="@dimen/activity_padding"
        android:text="@string/dialog_text_confirm"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/dialog_asset_select_rv_asset"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_asset_select_height"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
        android:scrollbars="none"
        tools:listitem="@layout/item_asset_select"
        tools:itemCount="5">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>