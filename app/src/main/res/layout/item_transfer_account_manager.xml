<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:autofit="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_item_selector"
    android:orientation="vertical"
    android:padding="@dimen/activity_padding">

    <TextView
        android:id="@+id/item_transfer_account_manager_tv_label"
        style="@style/font_white_dark_large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="@string/text_empty" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="@dimen/margin_6">

        <TextView
            android:id="@+id/item_transfer_account_manager_tv_address"
            style="@style/font_gray_small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:ellipsize="middle"
            android:text="@string/text_empty" />
        <TextView
            android:id="@+id/item_transfer_account_manager_tv_memo"
            style="@style/font_gray_small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:text="@string/text_empty"
            android:singleLine="true"
            android:ellipsize="middle"
            android:visibility="gone"/>
    </LinearLayout>

</LinearLayout>