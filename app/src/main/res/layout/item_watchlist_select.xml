<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_watchlist_focused"
    android:orientation="horizontal"
    android:padding="@dimen/activity_padding">

    <TextView
        android:id="@+id/item_watchlist_select_tv_symbol"
        style="@style/font_white_dark_medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/watchlist_select_item_symbol_color_selector"
        android:layout_marginStart="@dimen/margin_8"
        android:text="--/--" />

    <TextView
        android:id="@+id/item_watchlist_select_tv_24_change"
        style="@style/font_white_dark_medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:maxLines="1"
        android:text="@string/text_empty" />

    <TextView
        android:id="@+id/item_watchlist_select_tv_24_volume"
        style="@style/font_white_dark_medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:maxLines="1"
        android:text="@string/text_empty" />

</LinearLayout>