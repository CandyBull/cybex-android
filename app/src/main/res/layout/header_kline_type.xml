<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:padding="@dimen/margin_6"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/kline_ma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_kline_ma"
        android:text="MA"
        style="@style/font_gray_small"
        android:gravity="center"
        android:textColor="@color/kline_header_selector"
        android:clickable="true"
        android:focusable="true"/>

    <TextView
        android:id="@+id/kline_ema"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_10"
        android:background="@drawable/bg_kline_ma"
        android:gravity="center"
        android:text="EMA"
        style="@style/font_gray_small"
        android:clickable="true"
        android:focusable="true"
        android:textColor="@color/kline_header_selector" />

    <TextView
        android:id="@+id/kline_macd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_kline_ma"
        style="@style/font_gray_small"
        android:gravity="center"
        android:layout_marginStart="@dimen/margin_10"
        android:text="MACD"
        android:clickable="true"
        android:focusable="true"
        android:textColor="@color/kline_header_selector" />

    <TextView
        android:id="@+id/kline_boll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_kline_ma"
        android:layout_marginStart="@dimen/margin_10"
        android:gravity="center"
        style="@style/font_gray_small"
        android:text="BOLL"
        android:clickable="true"
        android:focusable="true"
        android:textColor="@color/kline_header_selector" />

    <TextView
        android:id="@+id/kline_rsi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_10"
        android:background="@drawable/bg_kline_ma"
        android:gravity="center"
        style="@style/font_gray_small"
        android:visibility="gone"
        android:text="RSI"
        android:clickable="true"
        android:focusable="true"
        android:textColor="@color/kline_header_selector" />

</LinearLayout>
