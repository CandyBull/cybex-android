<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:autofit="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/itemBackground"
    android:padding="@dimen/activity_padding">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/coinpair_linear_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/sell_or_buy_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/text_sell_or_buy_padding"
                android:paddingEnd="@dimen/text_sell_or_buy_padding"
                android:text="BUY"
                style="@style/font_white_dark_xsmall"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bg_btn_buy"/>

            <TextView
                android:id="@+id/quote_currency_open_order"
                style="@style/font_white_dark_bold_large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/text_quote_margin_start"
                android:text="XRP" />

            <TextView
                android:id="@+id/base_currency_open_order"
                style="@style/font_gray_bold_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/USD" />
        </LinearLayout>


        <TextView
            android:id="@+id/current_price_open_order"
            style="@style/font_white_dark_bold_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@id/coinpair_linear_layout"
            android:maxLines="1"
            android:layout_marginTop="@dimen/activity_margin"
            android:text="$11,309.109" />

        <TextView
            android:id="@+id/volume"
            style="@style/font_gray_bold_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/coinpair_linear_layout"
            android:layout_below="@id/coinpair_linear_layout"
            android:layout_marginTop="@dimen/text_volume_margin_top"
            android:text="Volume:288,980,254" />

    </RelativeLayout>

</RelativeLayout>