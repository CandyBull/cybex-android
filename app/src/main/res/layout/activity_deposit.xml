<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/deposit_coordinatorLayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:actionBarSize"
            app:navigationIcon="@drawable/ic_arrow_forward_16px"
            app:subtitleTextColor="@color/primary_color_grey"
            app:title=""
            app:titleTextColor="@color/primary_color_grey">

            <TextView
                android:id="@+id/deposit_toolbar_text_view"
                style="@style/font_white_dark_bold_large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />
        </android.support.v7.widget.Toolbar>

        <ImageView
            android:id="@+id/deposit_qr_code"
            android:layout_width="155dp"
            android:layout_height="155dp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/deposit_save_qr_address"
            style="@style/font_orange_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:text="@string/deposit_save_qr_code" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_margin"
            android:layout_marginRight="@dimen/activity_margin"
            android:layout_marginTop="@dimen/image_asset_width_height"
            android:background="@drawable/bg_item"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/activity_padding">

            <TextView
                android:id="@+id/deposit_qr_address"
                style="@style/font_white_dark_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/activity_padding"
                android:background="@color/deposit_divider_color" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_margin">

                <LinearLayout
                    android:id="@+id/deposit_copy_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/content_copy" />

                    <TextView
                        style="@style/font_orange_large"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/text_line_spacing_extra"
                        android:text="@string/deposit_copy_address" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/deposit_get_new_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true">

                    <ImageView
                        android:id="@+id/deposit_get_new_address_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_refresh" />

                    <TextView
                        style="@style/font_orange_large"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/text_line_spacing_extra"
                        android:text="@string/deposit_get_new_address" />

                </LinearLayout>


            </RelativeLayout>

        </LinearLayout>

        <TextView
            style="@style/font_gray_small"
            android:id="@+id/deposit_detail_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="36dp" />


    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>