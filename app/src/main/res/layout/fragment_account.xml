<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.AccountFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/layout_account_padding">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/layout_account_padding">

            <ImageView
                android:id="@+id/account_avatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/account_avatar" />

            <WebView
                android:id="@+id/account_avatar_webview"
                android:layout_width="@dimen/webview_width_height"
                android:layout_height="@dimen/webview_width_height" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/layout_account_padding">

            <LinearLayout
                android:id="@+id/account_logged_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/account_say_hello_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:letterSpacing="0.01"
                    android:lineSpacingExtra="7sp"
                    android:text="@string/log_in_cybex"
                    android:textColor="@color/primary_color_white"
                    android:textSize="34sp" />

                <TextView
                    android:id="@+id/account_membership_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/text_membership_margin_top"
                    android:padding="@dimen/text_membership_padding"
                    android:textColor="@color/grey_unselected_font_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/text_balance_margin_top">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="0.5"
                        android:text="@string/account_balance"
                        android:textColor="@color/grey_unselected_font_color"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/balance_info_question_marker"
                        android:src="@drawable/cloud_wallet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                </LinearLayout>

                <TextView
                    android:id="@+id/account_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary_color_white"
                    android:textSize="20sp" />

                <RelativeLayout
                    android:id="@+id/portfolio_title_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_portfolio_header_margin_top"
                    android:paddingBottom="@dimen/layout_account_padding"
                    android:paddingTop="@dimen/layout_account_padding">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="0.5"
                        android:text="@string/account_available_asset"
                        android:textColor="@color/grey_unselected_font_color"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/account_view_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="@string/account_view_all"
                        android:textColor="@color/grey_unselected_font_color"
                        android:textSize="14sp" />
                </RelativeLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/account_my_asset_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_portfolio_header_margin_top"
                    android:alpha="0.5"
                    android:paddingBottom="@dimen/layout_account_padding"
                    android:paddingTop="@dimen/layout_account_padding"
                    android:text="@string/account_other_asset"
                    android:textColor="@color/grey_unselected_font_color"
                    android:textSize="14sp" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <android.support.v7.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:focusable="true"
                            app:cardCornerRadius="4dp"
                            app:cardElevation="3dp"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:id="@+id/account_open_order_item_background"
                                android:layout_width="169dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/market_coin_pair_unselected"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="14dp"
                                    android:layout_marginTop="14dp"
                                    android:orientation="horizontal">

                                    <TextView
                                        style="@style/font_white_dark_bold_large"
                                        android:layout_width="58dp"
                                        android:layout_height="48dp"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginStart="12dp"
                                        android:text="Opened Orders" />

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentEnd="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginEnd="12dp"
                                        android:src="@drawable/ic_arrow_forward_right_16_px" />

                                </RelativeLayout>


                            </LinearLayout>

                        </android.support.v7.widget.CardView>


                        <android.support.v7.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:focusable="true"
                            app:cardCornerRadius="4dp"
                            app:cardElevation="3dp"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:id="@+id/account_lockup_item_background"
                                android:layout_width="169dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/market_coin_pair_unselected"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="14dp"
                                    android:layout_marginTop="14dp"
                                    android:orientation="horizontal">

                                    <TextView
                                        style="@style/font_white_dark_bold_large"
                                        android:layout_width="58dp"
                                        android:layout_height="48dp"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginStart="12dp"
                                        android:text="Lockup Asset" />

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentEnd="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginEnd="12dp"
                                        android:src="@drawable/ic_arrow_forward_right_16_px" />

                                </RelativeLayout>


                            </LinearLayout>

                        </android.support.v7.widget.CardView>


                    </LinearLayout>
                </HorizontalScrollView>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/account_no_log_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/account_log_in_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:letterSpacing="0.01"
                    android:lineSpacingExtra="7sp"
                    android:text="@string/log_in_cybex"
                    android:textColor="@color/primary_color_white"
                    android:textSize="34sp" />

                <TextView
                    android:id="@+id/account_introduction_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/text_introduction_margin_top"
                    android:text="@string/account_introduction_text"
                    android:textColor="@color/grey_unselected_font_color"
                    android:textSize="14sp" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>