<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?android:actionBarSize"
    android:background="@color/dialog_header_background_color">

    <TextView
        android:id="@+id/dialog_confirm_tv_title"
        style="@style/font_grey_large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/text_empty"/>
    <TextView
        style="@style/font_orange_bold_small"
        android:id="@+id/use_enotes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/margin_18"
        android:layout_marginStart="@dimen/activity_margin"
        android:text="@string/title_use_password"
        android:visibility="gone"
        />

</RelativeLayout>
